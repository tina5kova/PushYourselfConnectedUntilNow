<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.valentinvaleanu.pushyourself.Muscle">

            <Button
                android:id="@+id/arms_exercises"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/arms"
                android:onClick="openExercises">
            </Button>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:background="@color/colorAccent" />

            <Button
                android:id="@+id/chest_exercises"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/chest"
                android:onClick="openExercises"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:background="@color/colorAccent" />

            <Button
                android:id="@+id/abs_exercises"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/abs"
                android:onClick="openExercises"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:background="@color/colorAccent" />

            <Button
                android:id="@+id/back_exercises"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/back"
                android:onClick="openExercises"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:background="@color/colorAccent" />

            <Button
                android:id="@+id/legs_exercises"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/legs"
                android:onClick="openExercises"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:background="@color/colorAccent" />

            <Button
                android:id="@+id/cardio_exercises"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/cardio"
                android:onClick="openExercises"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:background="@color/colorAccent" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

